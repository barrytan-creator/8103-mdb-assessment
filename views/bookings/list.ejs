<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bookings - Pet Booking System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/">Pet Booking System</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/services">Services</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/owners">Owners</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/pets">Pets</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/bookings">Bookings</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <div class="row mb-3">
            <div class="col-md-6">
                <h2>Bookings</h2>
            </div>
            <div class="col-md-6 text-end">
                <a href="/bookings/create" class="btn btn-success">Add New Booking</a>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Pet</th>
                        <th>Owner</th>
                        <th>Service</th>
                        <th>Cost</th>
                        <th>Date</th>
                        <th>Time</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% bookings.forEach(function(booking) { %>
                        <tr>
                            <td><%= booking.booking_id %></td>
                            <td><%= booking.pet_name %></td>
                            <td><%= booking.owner_name %></td>
                            <td><%= booking.service_name %></td>
                            <td>$<%= Number(booking.cost).toFixed(2) %></td>
                            <td><%= new Date(booking.booking_date).toLocaleDateString() %></td>
                            <td><%= booking.booking_time %></td>
                            <td>
                                <% if (booking.status === 'Confirmed') { %>
                                    <span class="badge bg-success"><%= booking.status %></span>
                                <% } else if (booking.status === 'Pending') { %>
                                    <span class="badge bg-warning"><%= booking.status %></span>
                                <% } else { %>
                                    <span class="badge bg-secondary"><%= booking.status %></span>
                                <% } %>
                            </td>
                            <td>
                                <a href="/bookings/edit/<%= booking.booking_id %>" class="btn btn-sm btn-warning">Edit</a>
                                <a href="/bookings/delete/<%= booking.booking_id %>" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>