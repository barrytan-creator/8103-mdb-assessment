<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search Bookings - Pet Booking System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/">üêæ Pet Booking System</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/services">Services</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/owners">Owners</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/pets">Pets</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/bookings">Bookings</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <h2>üîç Search Bookings</h2>
        
        <!-- Search Form -->
        <div class="card mb-4">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0">Search Criteria</h5>
            </div>
            <div class="card-body">
                <form method="GET" action="/bookings/search">
                    <div class="row">
                        <div class="col-md-4">
                            <label for="start_date" class="form-label">From Date</label>
                            <input type="date" class="form-control" id="start_date" name="start_date" value="<‚Äã%= search.start_date || '' %>">
                        </div>
                        <div class="col-md-4">
                            <label for="end_date" class="form-label">To Date</label>
                            <input type="date" class="form-control" id="end_date" name="end_date" value="<‚Äã%= search.end_date || '' %>">
                        </div>
                        <div class="col-md-4">
                            <label for="status" class="form-label">Status</label>
                            <select class="form-control" id="status" name="status">
                                <option value="">All Statuses</option>
                                <option value="Pending" <%= search.status === 'Pending' ? 'selected' : '' %>>Pending</option>
                                <option value="Confirmed" <%= search.status === 'Confirmed' ? 'selected' : '' %>>Confirmed</option>
                                <option value="Completed" <%= search.status === 'Completed' ? 'selected' : '' %>>Completed</option>
                                <option value="Cancelled" <%= search.status === 'Cancelled' ? 'selected' : '' %>>Cancelled</option>
                            </select>
                        </div>
                    </div>
                    <div class="mt-3">
                        <button type="submit" class="btn btn-primary">üîç Search</button>
                        <a href="/bookings/search" class="btn btn-secondary">Clear</a>
                        <a href="/bookings" class="btn btn-outline-secondary">Back to All Bookings</a>
                    </div>
                </form>
            </div>
        </div>

        <!-- Search Results -->
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h3>Search Results (<%= bookings.length %> found)</h3>
            <a href="/bookings/create" class="btn btn-success">+ Add New Booking</a>
        </div>
        
        <% if (bookings.length === 0) { %>
            <div class="alert alert-info">
                <strong>No bookings found</strong> matching your search criteria. Try adjusting your filters.
            </div>
        <% } else { %>
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Pet Name</th>
                            <th>Owner</th>
                            <th>Service</th>
                            <th>Date</th>
                            <th>Time</th>
                            <th>Status</th>
                            <th>Cost</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% bookings.forEach(function(booking) { %>
                            <tr>
                                <td><%= booking.booking_id %></td>
                                <td><%= booking.pet_name %></td>
                                <td><%= booking.owner_name %></td>
                                <td><%= booking.service_name %></td>
                                <td><%= booking.booking_date.toISOString().split('T')[0] %></td>
                                <td><%= booking.booking_time %></td>
                                <td>
                                    <span class="badge bg-<%= booking.status === 'Confirmed' ? 'success' : booking.status === 'Pending' ? 'warning' : booking.status === 'Completed' ? 'info' : 'danger' %>">
                                        <%= booking.status %>
                                    </span>
                                </td>
                                <td>$<%= parseFloat(booking.cost).toFixed(2) %></td>
                                <td>
                                    <a href="/bookings/edit/<%= booking.booking_id %>" class="btn btn-sm btn-warning">Edit</a>
                                    <a href="/bookings/delete/<%= booking.booking_id %>" class="btn btn-sm btn-danger">Delete</a>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>